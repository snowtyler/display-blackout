<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MonitorBlanker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MonitorBlanker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Monitor Blanker Settings">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="30" MaxWidth="1500" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Click monitors to toggle blanking. Dark monitors will be blanked."
                   Style="{StaticResource BodyTextBlockStyle}"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

        <StackPanel Grid.Row="1" Spacing="16" Margin="0,24,0,0">
            <!-- Visual monitor layout - scales down with window -->
            <Viewbox x:Name="MonitorViewbox"
                     Stretch="Uniform"
                     HorizontalAlignment="Left"
                     StretchDirection="DownOnly">
                <Border Background="{StaticResource MonitorPickerContainerBackgroundBrush}"
                        BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="44">
                    <ItemsControl x:Name="MonitorItemsControl" ItemsSource="{x:Bind Monitors}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="local:MonitorItem">
                                <ToggleButton Style="{StaticResource MonitorToggleButtonStyle}"
                                              Width="{x:Bind ScaledWidth}"
                                              Height="{x:Bind ScaledHeight}"
                                              IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                              AutomationProperties.Name="{x:Bind AccessibleName}"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              Margin="{x:Bind PositionMargin}"
                                              Click="MonitorToggleButton_Click" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </Viewbox>

            <!-- Activation section -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <FontIcon Grid.Column="0"
                              Glyph="&#xEDA7;"
                              FontSize="20"
                              Margin="0,0,16,0"
                              VerticalAlignment="Center" />

                    <!-- Text -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Activation shortcut"
                                   Style="{StaticResource BodyTextBlockStyle}" />
                        <TextBlock Text="Press this shortcut to toggle blanking"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    </StackPanel>

                    <!-- Key badges -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                        <Border Style="{StaticResource KeyBadgeStyle}">
                            <TextBlock Text="Win" Style="{StaticResource KeyBadgeTextStyle}" />
                        </Border>
                        <Border Style="{StaticResource KeyBadgeStyle}">
                            <TextBlock Text="Shift" Style="{StaticResource KeyBadgeTextStyle}" />
                        </Border>
                        <Border Style="{StaticResource KeyBadgeStyle}">
                            <TextBlock Text="B" Style="{StaticResource KeyBadgeTextStyle}" />
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>

        <TextBlock Grid.Row="2"
                   Text="Click tray icon or press hotkey to toggle blanking"
                   Style="{StaticResource CaptionTextBlockStyle}"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
    </Grid>
</Window>
