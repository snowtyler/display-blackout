<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MonitorBlanker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MonitorBlanker"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Monitor Blanker">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="30" MaxWidth="1500" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Click monitors to toggle blanking. Dark monitors will be blanked."
                   Style="{StaticResource BodyTextBlockStyle}"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

        <StackPanel Grid.Row="1" Spacing="16" Margin="0,24,0,0">
            <!-- Visual monitor layout - scales down with window -->
            <Viewbox x:Name="MonitorViewbox"
                     Stretch="Uniform"
                     HorizontalAlignment="Left"
                     StretchDirection="DownOnly">
                <Border Background="{StaticResource MonitorPickerContainerBackgroundBrush}"
                        BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="44">
                    <ItemsControl x:Name="MonitorItemsControl" ItemsSource="{x:Bind Monitors}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="local:MonitorItem">
                                <ToggleButton Style="{StaticResource MonitorToggleButtonStyle}"
                                              Width="{x:Bind ScaledWidth}"
                                              Height="{x:Bind ScaledHeight}"
                                              IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                              AutomationProperties.Name="{x:Bind AccessibleName}"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              Margin="{x:Bind PositionMargin}"
                                              Click="MonitorToggleButton_Click" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </Viewbox>

            <!-- Blanking toggle section -->
            <controls:SettingsCard Header="Monitor blanking"
                                   Description="Blank the selected monitors">
                <controls:SettingsCard.HeaderIcon>
                    <ImageIcon Source="ms-appx:///Assets/iconLogo.targetsize-24.png" />
                </controls:SettingsCard.HeaderIcon>
                <ToggleSwitch x:Name="BlankingToggle"
                              OnContent="On"
                              OffContent="Off"
                              Toggled="BlankingToggle_Toggled" />
            </controls:SettingsCard>

            <!-- Activation section -->
            <controls:SettingsCard Header="Activation shortcut"
                                   Description="Press this shortcut to toggle blanking">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xEDA7;" />
                </controls:SettingsCard.HeaderIcon>
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <Border Style="{StaticResource KeyBadgeStyle}">
                        <TextBlock Text="Win" Style="{StaticResource KeyBadgeTextStyle}" />
                    </Border>
                    <Border Style="{StaticResource KeyBadgeStyle}">
                        <TextBlock Text="Shift" Style="{StaticResource KeyBadgeTextStyle}" />
                    </Border>
                    <Border Style="{StaticResource KeyBadgeStyle}">
                        <TextBlock Text="B" Style="{StaticResource KeyBadgeTextStyle}" />
                    </Border>
                </StackPanel>
            </controls:SettingsCard>
        </StackPanel>

        <TextBlock Grid.Row="2"
                   Text="Click tray icon or press hotkey to toggle blanking"
                   Style="{StaticResource CaptionTextBlockStyle}"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
    </Grid>
</Window>
