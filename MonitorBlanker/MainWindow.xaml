<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MonitorBlanker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MonitorBlanker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Monitor Blanker Settings">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="8">
            <TextBlock Text="Monitor Blanker" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock Text="Blanks secondary monitors to reduce distractions"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Spacing="16" Margin="0,24,0,0">
            <TextBlock Text="Monitors" Style="{StaticResource SubtitleTextBlockStyle}" />
            <ItemsControl x:Name="MonitorList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding DisplayName}"
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                  Margin="0,4,0,4" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,8,0,8" />

            <TextBlock Text="Keyboard Shortcut" Style="{StaticResource SubtitleTextBlockStyle}" />
            <TextBlock Text="Win + Shift + B"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       Margin="0,4,0,0" />

            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,8,0,8" />

            <CheckBox x:Name="GameModeCheckBox"
                      Content="Auto-blank in Game Mode"
                      IsChecked="True" />
        </StackPanel>

        <TextBlock Grid.Row="2"
                   Text="Double-click tray icon or press hotkey to toggle blanking"
                   Style="{StaticResource CaptionTextBlockStyle}"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
    </Grid>
</Window>
