<?xml version="1.0" encoding="utf-8"?>
<root>
  <xsd:schema id="root" xmlns="" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:msdata="urn:schemas-microsoft-com:xml-msdata">
    <xsd:element name="root" msdata:IsDataSet="true">
      <xsd:complexType>
        <xsd:choice maxOccurs="unbounded">
          <xsd:element name="data">
            <xsd:complexType>
              <xsd:sequence>
                <xsd:element name="value" type="xsd:string" minOccurs="0" msdata:Ordinal="1" />
                <xsd:element name="comment" type="xsd:string" minOccurs="0" msdata:Ordinal="2" />
              </xsd:sequence>
              <xsd:attribute name="name" type="xsd:string" use="required" />
              <xsd:attribute name="type" type="xsd:string" />
              <xsd:attribute name="mimetype" type="xsd:string" />
              <xsd:attribute ref="xml:space" />
            </xsd:complexType>
          </xsd:element>
          <xsd:element name="resheader">
            <xsd:complexType>
              <xsd:sequence>
                <xsd:element name="value" type="xsd:string" minOccurs="0" msdata:Ordinal="1" />
              </xsd:sequence>
              <xsd:attribute name="name" type="xsd:string" use="required" />
            </xsd:complexType>
          </xsd:element>
        </xsd:choice>
      </xsd:complexType>
    </xsd:element>
  </xsd:schema>
  <resheader name="resmimetype">
    <value>text/microsoft-resx</value>
  </resheader>
  <resheader name="version">
    <value>2.0</value>
  </resheader>
  <resheader name="reader">
    <value>System.Resources.ResXResourceReader, System.Windows.Forms, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089</value>
  </resheader>
  <resheader name="writer">
    <value>System.Resources.ResXResourceWriter, System.Windows.Forms, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089</value>
  </resheader>

  <!-- App name used throughout -->
  <data name="AppDisplayName" xml:space="preserve">
    <value>Display Blackout</value>
    <comment>The display name of the application</comment>
  </data>
  <data name="AppDescription" xml:space="preserve">
    <value>Black out selected displays on demand</value>
    <comment>Short description of the application</comment>
  </data>

  <!-- System tray -->
  <data name="TrayIconTooltip" xml:space="preserve">
    <value>Display Blackout - Click to open settings, double-click to toggle (Win+Shift+B)</value>
    <comment>Tooltip shown when hovering over the system tray icon</comment>
  </data>
  <data name="ContextMenuSettings" xml:space="preserve">
    <value>Settings</value>
    <comment>Context menu item to open settings</comment>
  </data>
  <data name="ContextMenuToggle" xml:space="preserve">
    <value>Toggle</value>
    <comment>Context menu item to toggle blackout</comment>
  </data>
  <data name="ContextMenuExit" xml:space="preserve">
    <value>Exit</value>
    <comment>Context menu item to exit the application</comment>
  </data>

  <!-- Main window - using x:Uid pattern for XAML binding -->
  <data name="Instructions.Text" xml:space="preserve">
    <value>Click displays to toggle blackout. Dark displays will be blacked out.</value>
    <comment>Instructions shown at the top of the settings window</comment>
  </data>
  <data name="DisplayBlackoutCard.Header" xml:space="preserve">
    <value>Display blackout</value>
    <comment>Header for the blackout toggle settings card</comment>
  </data>
  <data name="DisplayBlackoutCard.Description" xml:space="preserve">
    <value>Black out the selected displays</value>
    <comment>Description for the blackout toggle settings card</comment>
  </data>
  <data name="ActivationShortcutCard.Header" xml:space="preserve">
    <value>Activation shortcut</value>
    <comment>Header for the keyboard shortcut settings card</comment>
  </data>
  <data name="ActivationShortcutCard.Description" xml:space="preserve">
    <value>Press this shortcut to toggle blackout</value>
    <comment>Description for the keyboard shortcut settings card</comment>
  </data>
  <data name="KeyShift.Text" xml:space="preserve">
    <value>Shift</value>
    <comment>Label for the Shift key in the shortcut display</comment>
  </data>

  <!-- Accessibility - format strings for display names -->
  <data name="MonitorAccessibleName" xml:space="preserve">
    <value>Display {0} of {1}</value>
    <comment>{0} is the display number, {1} is the total count</comment>
  </data>
  <data name="MonitorAccessibleNamePrimary" xml:space="preserve">
    <value>Display {0} of {1}, primary</value>
    <comment>{0} is the display number, {1} is the total count. Used for the primary display.</comment>
  </data>

</root>
