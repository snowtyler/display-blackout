<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="DisplayBlackout.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DisplayBlackout">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Monitor Picker Brushes -->
            <SolidColorBrush x:Key="MonitorPickerContainerBackgroundBrush" Color="{ThemeResource SolidBackgroundFillColorSecondary}" />
            <SolidColorBrush x:Key="MonitorUnselectedBackgroundBrush" Color="{ThemeResource ControlAltFillColorQuarternary}" />
            <SolidColorBrush x:Key="MonitorUnselectedHoverBackgroundBrush" Color="{ThemeResource SubtleFillColorSecondary}" />
            <SolidColorBrush x:Key="MonitorSelectedBackgroundBrush" Color="Black" />
            <SolidColorBrush x:Key="MonitorSelectedHoverBackgroundBrush" Color="#333333" />

            <!-- Key Badge Styles (matching PowerToys ShortcutControl with AccentKeyVisualStyle) -->
            <Style x:Key="KeyBadgeStyle" TargetType="Grid">
                <Setter Property="Background" Value="{ThemeResource AccentFillColorDefaultBrush}" />
                <Setter Property="BorderBrush" Value="{ThemeResource AccentControlElevationBorderBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
                <Setter Property="Padding" Value="8" />
                <Setter Property="MinWidth" Value="36" />
                <Setter Property="BackgroundSizing" Value="OuterBorderEdge" />
            </Style>
            <Style x:Key="KeyBadgeTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Foreground" Value="{ThemeResource TextOnAccentFillColorPrimaryBrush}" />
                <Setter Property="FontWeight" Value="Normal" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="TextLineBounds" Value="Tight" />
            </Style>
            <!-- Inner container to constrain text height like PowerToys KeyCharPresenter -->
            <Style x:Key="KeyBadgeContentStyle" TargetType="Grid">
                <Setter Property="Height" Value="14" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <!-- Monitor ToggleButton Style -->
            <Style x:Key="MonitorToggleButtonStyle" TargetType="ToggleButton">
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="MinWidth" Value="0" />
                <Setter Property="MinHeight" Value="0" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="RootBorder"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    Background="{StaticResource MonitorUnselectedBackgroundBrush}">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal" />
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Target="RootBorder.Background" Value="{StaticResource MonitorUnselectedHoverBackgroundBrush}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <VisualState.Setters>
                                                <Setter Target="RootBorder.Background" Value="{StaticResource MonitorUnselectedHoverBackgroundBrush}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Disabled">
                                            <VisualState.Setters>
                                                <Setter Target="RootBorder.Background" Value="{StaticResource MonitorUnselectedBackgroundBrush}" />
                                                <Setter Target="RootBorder.Opacity" Value="0.5" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Checked">
                                            <VisualState.Setters>
                                                <Setter Target="RootBorder.Background" Value="{StaticResource MonitorSelectedBackgroundBrush}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="CheckedPointerOver">
                                            <VisualState.Setters>
                                                <Setter Target="RootBorder.Background" Value="{StaticResource MonitorSelectedHoverBackgroundBrush}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="CheckedPressed">
                                            <VisualState.Setters>
                                                <Setter Target="RootBorder.Background" Value="{StaticResource MonitorSelectedHoverBackgroundBrush}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="CheckedDisabled">
                                            <VisualState.Setters>
                                                <Setter Target="RootBorder.Background" Value="{StaticResource MonitorSelectedBackgroundBrush}" />
                                                <Setter Target="RootBorder.Opacity" Value="0.5" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                    <VisualStateGroup x:Name="FocusStates">
                                        <VisualState x:Name="Focused">
                                            <VisualState.Setters>
                                                <Setter Target="RootBorder.BorderBrush" Value="{ThemeResource FocusVisualWhiteStrokeOuter}" />
                                                <Setter Target="RootBorder.BorderThickness" Value="2" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Unfocused" />
                                        <VisualState x:Name="PointerFocused" />
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
